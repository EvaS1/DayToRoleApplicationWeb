{% extends 'base.html.twig' %}

{% block title %}Partie{% endblock %}

{% block body %}
    <h1>Partie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partie.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ partie.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ partie.description }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ partie.duree ? partie.duree|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ partie.dateDebut ? partie.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ partie.dateFin ? partie.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('partie_index') }}">back to list</a>

    <a href="{{ path('partie_edit', {'id': partie.id}) }}">edit</a>

    {{ include('partie/_delete_form.html.twig') }}
