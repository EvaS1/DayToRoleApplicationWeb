{% extends 'base.html.twig' %}

{% block title %}Complexite index{% endblock %}

{% block body %}
    <h1>Complexite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Points</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for complexite in complexites %}
            <tr>
                <td>{{ complexite.id }}</td>
                <td>{{ complexite.libelle }}</td>
                <td>{{ complexite.points }}</td>
                <td>
                    <a href="{{ path('complexite_show', {'id': complexite.id}) }}">show</a>
                    <a href="{{ path('complexite_edit', {'id': complexite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('complexite_new') }}">Create new</a>
{% endblock %}
