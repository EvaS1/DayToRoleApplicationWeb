{% extends 'base.html.twig' %}

{% block title %}Scenario{% endblock %}

{% block body %}
    <h1>Scenario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scenario.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ scenario.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ scenario.description }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ scenario.duree ? scenario.duree|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nb_joueur_min</th>
                <td>{{ scenario.nbJoueurMin }}</td>
            </tr>
            <tr>
                <th>Nb_joueur_max</th>
                <td>{{ scenario.nbJoueurMax }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('scenario_index') }}">back to list</a>

    <a href="{{ path('scenario_edit', {'id': scenario.id}) }}">edit</a>

    {{ include('scenario/_delete_form.html.twig') }}
{% endblock %}
